{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**",
      "!**/.pnpm-store",
      "!**/node_modules",
      "!**/.next",
      "!**/*.css"
    ]
  },
  "linter": {
    "rules": {
      "performance": {
        "noNamespaceImport": "off"
      },
      "nursery": {
        "useMaxParams": "off"
      }
    }
  }
}
